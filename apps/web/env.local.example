NEXT_PUBLIC_ACCOUNT_FACTORY_ARBSEPOLIA=<DEPLOYED_ACCOUNT_FACTORY_ARBSEPOLIA_ADDRESS>
NEXT_PUBLIC_BUNDLER_RPC_ARBSEPOLIA=<YOUR_BUNDLER_RPC_ARBSEPOLIA_URL>
NEXT_PUBLIC_SMART_ACCOUNT_ARBSEPOLIA=<CREATED_SMART_ACCOUNT_ARBSEPOLIA_ADDRESS>

# Contract Addresses - Ethereum Sepolia
NEXT_PUBLIC_PYUSD_SEPOLIA=<DEPLOYED_PYUSD_SEPOLIA_ADDRESS>
NEXT_PUBLIC_PERMIT2_SEPOLIA=<PERMIT2_SEPOLIA_ADDRESS>
NEXT_PUBLIC_ENTRYPOINT_SEPOLIA=<ENTRYPOINT_SEPOLIA_ADDRESS>
NEXT_PUBLIC_REGISTRY_SEPOLIA=<DEPLOYED_REGISTRY_SEPOLIA_ADDRESS>
NEXT_PUBLIC_INVOICE_SEPOLIA=<DEPLOYED_INVOICE_SEPOLIA_ADDRESS>
NEXT_PUBLIC_CHECKOUT_SEPOLIA=<DEPLOYED_CHECKOUT_SEPOLIA_ADDRESS>
NEXT_PUBLIC_PAYMASTER_SEPOLIA=<DEPLOYED_PAYMASTER_SEPOLIA_ADDRESS>
NEXT_PUBLIC_BRIDGE_ESCROW_SEPOLIA=<DEPLOYED_BRIDGE_ESCROW_SEPOLIA_ADDRESS>
