# ============================================
# Next.js Public Environment Variables (Frontend)
# ============================================
# These are embedded in the browser build and MUST start with NEXT_PUBLIC_

# RPC URLs for local development (point to anvil forks)
NEXT_PUBLIC_ARBITRUM_SEPOLIA_RPC=<YOUR_ARBITRUM_SEPOLIA_RPC_URL>
NEXT_PUBLIC_ETHEREUM_SEPOLIA_RPC=<YOUR_ETHEREUM_SEPOLIA_RPC_URL>

# Contract Addresses - Arbitrum Sepolia
NEXT_PUBLIC_PYUSD_ARBSEPOLIA=<DEPLOYED_PYUSD_ARBSEPOLIA_ADDRESS>
NEXT_PUBLIC_PERMIT2_ARBSEPOLIA=<PERMIT2_ARBSEPOLIA_ADDRESS>
NEXT_PUBLIC_ENTRYPOINT_ARBSEPOLIA=<ENTRYPOINT_ARBSEPOLIA_ADDRESS>
NEXT_PUBLIC_REGISTRY_ARBSEPOLIA=<DEPLOYED_REGISTRY_ARBSEPOLIA_ADDRESS>
NEXT_PUBLIC_INVOICE_ARBSEPOLIA=<DEPLOYED_INVOICE_ARBSEPOLIA_ADDRESS>
