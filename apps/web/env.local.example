# API URLs (for frontend to communicate with backend services)
NEXT_PUBLIC_INDEXER_URL=http://localhost:3001
NEXT_PUBLIC_RELAYER_URL=http://localhost:3002
NEXT_PUBLIC_COST_ENGINE_URL=http://localhost:3003

# Authentication & Testing
NEXT_PUBLIC_TEST_OWNER=<YOUR_TEST_OWNER_ADDRESS>
NEXT_PUBLIC_GUARDIAN_ADDRESS=<YOUR_GUARDIAN_ADDRESS>

# Server-side environment variables (not exposed to browser)
DEPLOYER_PRIVATE_KEY=<YOUR_DEPLOYER_PRIVATE_KEY>
HMAC_SECRET=<YOUR_HMAC_SECRET>
